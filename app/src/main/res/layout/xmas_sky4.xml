<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/christmas_sky"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/santaFly"
        android:layout_width="275dp"
        android:layout_height="151dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/fatherxmasreindeer" />

    <Button
        android:layout_width="275dp"
        android:layout_height="147dp"
        android:layout_alignStart="@+id/santaFly"
        android:layout_alignTop="@+id/santaFly"
        android:onClick="santaMove"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/christmasSkyText"
        android:layout_width="322dp"
        android:layout_height="74dp"
        android:layout_alignEnd="@+id/santaFly"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="59dp"
        android:backgroundTint="@android:color/white"
        android:backgroundTintMode="add"
        android:ems="10"
        android:inputType="text|textMultiLine"
        android:text="Father Christmas and his reindeer are going to deliver presents"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/santaFly"
        android:backgroundTint="@android:color/transparent"
        android:onClick="page4Back"
        android:text="Page 4" />

    <Button
        android:id="@+id/santaFlyButton"
        android:layout_width="318dp"
        android:layout_height="73dp"
        android:layout_alignStart="@+id/christmasSkyText"
        android:layout_alignTop="@+id/christmasSkyText"
        android:backgroundTint="@android:color/transparent"
        android:onClick="santaFly"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/santaFly"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="297dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="page6"
        android:text="Page 6" />

</RelativeLayout>