<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fireplace">

    <Button
        android:id="@+id/page3Back"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Page 3"
        android:onClick="page3Back"/>

    <Button
        android:id="@+id/page4"
        android:layout_width="73dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/page3Back"
        android:layout_marginEnd="11dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="page5"
        android:text="Page 5" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="148dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/girlleft" />

    <ImageView
        android:id="@+id/girlBubble4"
        android:layout_width="327dp"
        android:layout_height="181dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/speechbubbleleft"
        android:visibility="visible" />

    <TextView
        android:id="@+id/girlText4"
        android:layout_width="178dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="66dp"
        android:text="I would love to help baby Melvin. He can have my dummy to help him sleep and I would like a comfy blanket to help me sleep." />

    <Button
        android:layout_width="119dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="233dp"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:onClick="girlSpeak4" />


</RelativeLayout>