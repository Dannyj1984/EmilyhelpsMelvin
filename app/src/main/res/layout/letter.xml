<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snowmanscroll">

    <EditText
        android:id="@+id/letterText"
        android:layout_width="176dp"
        android:layout_height="215dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="47dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/bad_script"
        android:inputType="textMultiLine"
        android:text="Dear Emily,                              Melvin the baby reindeer is struggling to sleep at night time. I wanted to ask if he could have your dummy to help him sleep. In return I will leave you a very special present. Love from Father Christmas and Rudolph xx"
        android:textSize="10sp" />

    <Button
        android:id="@+id/back2Button"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:onClick="back2"
        android:text="Page 2" />

    <Button
        android:id="@+id/page4Button"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@android:color/transparent"
        android:onClick="page4"
        android:text="Page 4" />
</RelativeLayout>